<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hjb.admin.mapper.UserMapper">

    <select id="list" resultType="com.hjb.admin.domain.user.UserVo">
        SELECT id, userId, nickname, sex, phone, email, wechat, schoolName, majorName, introduce, status FROM user
        <where>
            <if test="userId !=null ">
                userId = #{userId}
            </if>
            <if test="nickname !=null and nickname != ''">
                AND nickname like concat('%', #{nickname}, '%')
            </if>
        </where>
        ORDER BY
        createTime DESC
    </select>
</mapper>